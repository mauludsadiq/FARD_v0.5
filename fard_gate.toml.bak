# FARD Language Gate configuration
# Adjust `cmd` to your local runner.

[runner]
# Either a single executable (e.g. "fardrun") or a list (e.g. ["python","-m","fard.toolchain.fardrun"]).
cmd = ["cargo","run","--quiet","--bin","fardrun","--"]

# Arguments template. The gate runner will append:
#   --program <path>
#   --out <dir>
# And may append lock args depending on the gate.
args = ["run"]

# Output filenames expected under --out directory.
trace_file = "trace.ndjson"
result_file = "result.json"
lock_file = "fard.lock.json"

[paths]
programs_dir = "tests/gate/programs"
expected_dir = "tests/gate/expected"
out_root = "out/gate_runs"

[artifacts]
# Relative to the per-run output directory.
trace_relpath = "trace.ndjson"
result_relpath = "result.json"
lock_relpath = "fard.lock.json"

[gates]
# If your runner prints a deterministic trace CID somewhere else, leave this.
require_trace_file = true
require_result_file = true

